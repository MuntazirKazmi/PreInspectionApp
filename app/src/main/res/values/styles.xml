<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat.Headline.White" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.AppCompat.Subhead.White" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.White" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.White" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.Black" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#5e5e5e</item>
    </style>

    <style name="TextAppearance.AppCompat.Menu.Black" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#5e5e5e</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Black" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#5e5e5e</item>
    </style>
    <style name="TextAppearance.AppTheme.Option" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

</resources>
